{
  "restore_on_startup": "none",
  "auto_update": false,

  "ui_font_family": "Fira Code",
  "ui_font_size": 16,

  "buffer_font_family": "Fira Code",
  "buffer_font_size": 14,

  "confirm_quit": true,

  "scrollbar": {
    "show": "never"
  },

  "tab_bar": {
    "show": true
  },

  "disable_ai": true,

  "minimap": {
    "show": "always"
  },

  "show_whitespaces": "boundary",
  "indent_guides": {
    "enabled": false
  },

  "toolbar": {
    "agent_review": false,
    "breadcrumbs": false,
    "code_actions": false,
    "quick_actions": false,
    "selections_menu": false
  },

  "title_bar": {
    "show_onboarding_banner": false,
    "show_sign_in": false,
    "show_user_picture": false
  },

  "git": {
    "inline_blame": {
      "enabled": false
    }
  },

  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },

  "terminal": {
    "button": false,
    "font_family": "Fira Code",
    "font_size": 14,
    "shell": {
      "program": "fish"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "theme": {
    "dark": "Gruvbox Dark Hard",
    "light": "Gruvbox Dark Hard",
    "mode": "dark"
  },

  "experimental.theme_overrides": {
    "background": "#000000",
    "editor.background": "#000000",
    "editor.gutter.background": "#000000",
    "elevated_surface.background": "#000000",
    "panel.background": "#000000",
    "status_bar.background": "#000000",
    "tab.active_background": "#000000",
    "tab.inactive_background": "#000000",
    "tab_bar.background": "#000000",
    "terminal.background": "#000000",
    "title_bar.background": "#000000",
    "title_bar.inactive_background": "#000000",
    "toolbar.background": "#000000"
  },

  "vim_mode": true,

  "agent": {
    "button": false,
    "enabled": false
  }
}
